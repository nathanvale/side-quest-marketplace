{
	"name": "@nathanvale/my-agent-cortex",
	"version": "0.0.0",
	"description": "Agent-native knowledge system",
	"author": {
		"name": "Nathan Vale",
		"url": "https://github.com/nathanvale"
	},
	"license": "MIT",
	"type": "module",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nathanvale/my-agent-cortex.git"
	},
	"bugs": {
		"url": "https://github.com/nathanvale/my-agent-cortex/issues"
	},
	"homepage": "https://github.com/nathanvale/my-agent-cortex#readme",
	"keywords": [
		"knowledge",
		"research",
		"brainstorm",
		"claude-code",
		"plugin"
	],
	"bin": {
		"cortex": "./src/cli.ts"
	},
	"engines": {
		"node": ">=22.20"
	},
	"scripts": {
		"check": "biome check --write .",
		"coverage": "bun test --coverage",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"lint:scripts": "shellcheck .github/scripts/*.sh",
		"lint:workflows": "actionlint -color -verbose",
		"prepare": "husky",
		"security:audit": "npm audit",
		"setup:protect": "bun scripts/setup-protect.ts",
		"test": "bun test --recursive",
		"test:ci": "TF_BUILD=true bun test --recursive",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"typecheck": "tsc --noEmit",
		"validate": "bun run check && bun run typecheck && bun run validate:marketplace",
		"validate:marketplace": "bun run scripts/validate-marketplace.ts"
	},
	"dependencies": {
		"@logtape/logtape": "^2.0.4",
		"gray-matter": "^4.0.3",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/node": "^24.8.1",
		"bun-types": "^1.3.3",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,mts,cts,json}": [
			"biome check --write"
		]
	}
}
